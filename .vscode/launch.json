{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome against localhost, with sourcemaps",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080",
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}"
		},
		{
			"name": "Launch local file, with sourcemaps",
			"type": "chrome",
			"request": "launch",
			"sourceMaps": true,
			"file": "${workspaceRoot}/publish/index.html"
		},
		{
			"name": "Attach to Chrome, with sourcemaps",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}"
		}
	]
}
