// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process

// A task runner that calls the Typescript compiler (tsc) and
// Compiles a HelloWorld.ts program
{
	"version": "0.1.0",

	"command": "cmd",
	"isShellCommand": true,
	"showOutput": "silent",
	"args": ["/C"],

	"tasks": [
		{
			"taskName": "build TypeScript",
			"args": ["tsc --out publish/dq10skill.js dq10skill-main.ts"],
			"isBuildCommand": true,
			"suppressTaskName": true
		},
		
		{
			"taskName": "produce HTMLs",
			"args": ["ruby generator/produce_html.rb"],
			"isBuildCommand": true,
			"suppressTaskName": true,
			"showOutput": "silent"
		},
		
		{
			"taskName": "produce data JSON",
			"args": ["ruby generator/produce_data_json.rb"],
			"isBuildCommand": true,
			"suppressTaskName": true,
			"showOutput": "never"
		},
		
		{
			"taskName": "refresh Amazon cache",
			"args": ["ruby generator/refresh_amazon_cache.rb"],
			"isBuildCommand": true,
			"suppressTaskName": true
		}
	]
}
